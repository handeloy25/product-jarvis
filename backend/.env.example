# Product Jarvis - Environment Configuration
# Copy this file to .env and add your API key

# Anthropic API Key (required for AI Assistant)
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-api-key-here

# Task Flow Integration
TASKFLOW_WEBHOOK_URL=http://localhost:8000/webhooks/pj
TASKFLOW_WEBHOOK_SECRET=taskflow-pj-secret-2026
TASKFLOW_WEBHOOKS_ENABLED=true
TASKFLOW_API_KEY=pj-taskflow-dev-key-2026

# Authentication Mode (dev or supabase)
AUTH_MODE=dev
REQUIRE_API_KEY_IN_DEV=false
RATE_LIMIT_PER_MINUTE=60

# Supabase Configuration (optional, for production auth)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_JWT_SECRET=

# Frontend URL (update for production)
FRONTEND_URL=http://localhost:5173
